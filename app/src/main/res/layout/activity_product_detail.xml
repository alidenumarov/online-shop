<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProductDetail">



    <ImageView
        android:id="@+id/idProductDetailIV"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="18dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/ic_plus_svgrepo_com"/>

    <TextView
        android:id="@+id/idProductNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="product desc"
        app:layout_constraintTop_toBottomOf="@+id/idProductDetailIV"
        tools:layout_editor_absoluteX="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVComments"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@+id/idProductNameTV" />


</androidx.constraintlayout.widget.ConstraintLayout>