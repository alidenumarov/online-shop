<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/idBucketProductImgUrl"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/idImgCountMinus"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_minus_svgrepo_com"/>

        <TextView
            android:id="@+id/idCurCountET"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="3dp"
            android:text="2"
            android:maxLength="3"
            android:inputType="number"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/idImgCountPlus"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_plus_svgrepo_com"/>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="6dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBucketProductName"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:maxLength="80"
                    android:text="Here is the name of Bucket Product"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBucketProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111 412"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvRemoveFromBucket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:text="Remove"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>